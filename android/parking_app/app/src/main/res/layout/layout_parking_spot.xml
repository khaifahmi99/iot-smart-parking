<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_parking_spot"
            android:src="@drawable/ic_parking_spot"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/text_parking_spot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:text="@string/edit_username"
            android:layout_toEndOf="@+id/image_parking_spot"
            android:layout_toRightOf="@+id/image_parking_spot"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"/>


    </RelativeLayout>

</LinearLayout>